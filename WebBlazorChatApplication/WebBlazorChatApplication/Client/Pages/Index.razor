          class="form-control">
          <button class="btn btn-primary form-group-append"
          @onclick="Send"
          disabled="@(!IsConnected)">
          Send
          </button>
        <button class="btn btn-danger form-group-append"
        @onclick="SendMessageToUser" disabled="@(!IsConnected)">Send message to user</button>
      </div>    
}
